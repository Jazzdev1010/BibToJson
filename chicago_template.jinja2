<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Research Publications</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
        }
        .publication {
            margin-bottom: 20px;
        }
        .title {
            font-size: 1em;
        }
        .journal, .booktitle {
            font-style: italic;
        }
        .title a {
            text-decoration: none;
            color: #000;
        }
        .title a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Research Publications</h1>
    
    <h2>Journal Articles</h2>
    <ul>
        {% for entry in entries if entry.ENTRYTYPE == 'article' %}
            <li class="publication">
                <span class="author">{{ entry.author }}</span>
                {% if entry.title %}
                    , <span class="title">"<a href="{{ entry.url if entry.url }}" target="_blank">{{ entry.title }}</a>"</span>
                {% endif %}
                {% if entry.journal %}
                    , <span class="journal">{{ entry.journal }}</span>
                {% endif %}
                {% if entry.volume %}
                    , <span class="volume">{{ entry.volume }}</span>
                {% endif %}
                {% if entry.number %}
                    , <span class="number">no. {{ entry.number }}</span>
                {% endif %}
                {% if entry.pages %}
                    , <span class="pages">{{ entry.pages }}</span>
                {% endif %}
                {% if entry.year %}
                    , <span class="year">{{ entry.year }}</span>
                {% endif %}
                .
            </li>
        {% endfor %}
    </ul>
    
    <h2>Conference Papers</h2>
    <ul>
        {% for entry in entries if entry.ENTRYTYPE == 'conference' or entry.ENTRYTYPE == 'inproceedings' %}
            <li class="publication">
                <span class="author">{{ entry.author }}</span>
                {% if entry.title %}
                    , <span class="title">"<a href="{{ entry.url if entry.url }}" target="_blank">{{ entry.title }}</a>"</span>
                {% endif %}
                {% if entry.booktitle %}
                    , <span class="booktitle">{{ entry.booktitle }}</span>
                {% endif %}
                {% if entry.publisher %}
                    {% if entry.pages %}
                        , <span class="pages">{{ entry.pages }}</span>
                    {% endif %}
                    {% if entry.organization %}
                        , <span class="organization">{{ entry.organization }}</span>
                    {% endif %}
                {% endif %}
                {% if entry.year %}
                    , <span class="year">{{ entry.year }}</span>
                {% endif %}
                .
            </li>
        {% endfor %}
    </ul>
    
</body>
</html>